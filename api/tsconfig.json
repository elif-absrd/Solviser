{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

  },
  "include": ["src/**/*.ts"],
   "files": [
    "src/types/express.d.ts" // This explicitly forces the compiler to include your custom type
  ],
  "exclude": ["node_modules", "dist"]
}
